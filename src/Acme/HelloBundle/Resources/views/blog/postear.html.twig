{% extends "AcmeHelloBundle:blog:base.html.twig" %}

	{%block body%}
	{% include 'AcmeHelloBundle:blog:menu.html.twig' %}
	<form  action="/post" method="POST" class="form-horizontal">
			
				{% if esteselpao  == 1 %}
					<div class="alert alert-success" role="alert">Datos guardados correctamente</div>
				 {% else %}
				 	<div class="alert alert-warning" role="alert">Complete los campos</div>
				{% endif%}
		
		<div class="form-group">
   	 			<label for="colocTitulo" class="col-sm-2 control-label">Titulo</label>
    		<div class="col-sm-10">
    	  		<input type="text" class="form-control" id="colocTitulo" placeholder="Titulo" name="titulo">
   	 		</div>
  		</div>
			
		<div class="form-group">
    			<label for="colocCuerpo" class="col-sm-2 control-label">Post</label>
    		<div class="col-sm-10">
				<textarea name="blog" rows="10" cols="40" placeholder="Comentarios"></textarea>
    		</div>

			
			<br><br>
			<button type="submit" name="Postear" class="btn btn-primary">Enviar</button>
			<button type="reset"  name="reset"   class="btn btn-danger">Limpiar</button>
			
			
		
		</form>

		{%endblock%}